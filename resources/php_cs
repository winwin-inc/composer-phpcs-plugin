<?php // -*- php -*-

$finder = PhpCsFixer\Config::create()
        ->getFinder();

return PhpCsFixer\Config::create()
    ->setFinder($finder)
    ->setRules([
        "@Symfony" => true,
        'array_syntax' => array('syntax' => 'short'),
        'ordered_imports' => true,
        'no_unused_imports' => true
    ]);
